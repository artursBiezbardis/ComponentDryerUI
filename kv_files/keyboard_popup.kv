<KeyboardPopup>
    cols:1
    title: 'Keyboard'
    size: root.size
    GridLayout:
        cols: 1
        size: root.size
        BoxLayout:
            orientation: 'horizontal'
            size_hint_x: 1
            size_hint_y: None
            height: 35
            cols: 1
            TextInput:
                id: input_text
                multiline: False
                value: ''
