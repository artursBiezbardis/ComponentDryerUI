<ItemViewPopup>:
    cols:1
    title: 'Item data'
    size: root.size
    GridLayout:
        cols: 1
        size: root.size
        #orientation: 'vertical'
        size_hint_x: None
        canvas.before:
            Color:
                rgba: 0.15, 0.15, 0.15, 1
            Rectangle:
                pos: root.pos
                size: root.size
        BoxLayout:
            size_hint_y: 1
            GridLayout:
                id: scroll_box
                cols: 2
                size_hint_y: 1
                height: self.minimum_height
        GridLayout:
            cols: 2
            size_hint_y: 0.1
            Button:
                text: 'Dismiss'
                on_press:
                    root.dismiss()
            Button:
                text: 'REMOVE'
                on_press:
                    root.remove_item()
                    root.main_layout.refresh_layout()
                    root.main_layout.find_items_on_remove()
                    root.dismiss()
