#:import Window kivy.core.window.Window


<InfoPopup>
    cols:1
    title: 'INFO'
    size_hint: None, None
    size: Window.width / 2, Window.height / 2
    canvas.before:
        Color:
            rgba: root.info_window_color()
        Rectangle:
            pos: self.pos
            size: self.size
    GridLayout:
        cols: 1
        canvas.before:
            Color:
                rgba: root.info_window_color()
            Rectangle:
                pos: self.pos
                size: self.size
        BoxLayout:
            orientation: 'horizontal'
            size_hint_x: 1
            size_hint_y: None
            height: 50
            cols: 1
            canvas.before:
                Color:
                    rgba: root.info_window_color()
                Rectangle:
                    pos: self.pos
                    size: self.size
            Label:
                text: root.info
                canvas.before:
                    Color:
                        rgba: root.info_window_color()
                    Rectangle:
                        pos: self.pos
                        size: self.size
