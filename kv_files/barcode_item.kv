<BarcodeItem>:
    size_hint_y: None
    height: 80
    orientation: 'horizontal'
    canvas.before:
        Color:
            rgba: 0.24, 0.25, 0.25, 1
        Rectangle:
            pos: self.pos
            size: self.size
    canvas.after:
        Color:
            rgba: 0.12, 0.12, 0.13, 1
        Line:
            points: [self.x, self.y, self.right, self.y]  # Horizontal line at the bottom
            width: 1

    Label:
        text: root.barcode_text
        size_hint_x: 0.4
        canvas.before:
            Color:
                rgba: 0.12, 0.12, 0.13, 1
            Rectangle:
                pos: self.right - 0.5, self.y  # Adjust '5' to change the border width
                size: 0.5, self.height

    Label:
        text: root.part_text
        size_hint_x: 0.4

    Button:
        text: 'Set'
        size_hint_x: 0.2
        on_press: root.on_button_press()