<MainLayout>:
    cols:1
    GridLayout:
        cols: 1
        size: root.size
        GridLayout:
            rows: 2
            size_hint_y: 0.9 # 80% of the parent's height is assigned here

            # First row with two columns
            GridLayout:
                cols: 2
                size_hint_y: 0.9  # 90% of the parent grid row's height
                size_hint_x: 0.9

                # First column in the first row
                GridLayout:
                    cols: 1
                    #size_hint_y: None
                    size_hint_x: None
                    height: self.minimum_height  # Dynamic height based on its children
                    row_force_default: True
                    row_default_height: 50
                    col_force_default: True
                    col_default_width: 100
                    Label:
                        id: status
                        bold: True
                        text: 'Status'
                    Button:
                        text: 'List'
                        on_press: root.open_all_item_list();

                    Label:
                        text:'\n\n\n\n'

                    Label:
                        id: status_text
                        bold: True
                        text: 'Status info:   \n\nRH to High'
                    Label:
                        text:'\n\n\n\n'
                    Label:
                        id: last_action_text
                        bold: True
                        text: 'Last action:   \n\n'


                # Second column in the first row with scrollable content
                BoxLayout:
                    cols: 1
                    orientation: 'vertical'
                    size_hint_x: 1.9
                    height: '10dp'
                    canvas.before:
                        Color:
                            rgba: 0.15, 0.15, 0.15, 1
                        Rectangle:
                            pos: self.pos
                            size: self.size

                    GridLayout:
                        size_hint_x: 1
                        size_hint_y: None
                        height: 50
                        cols: 4

                        Label:
                            size_hint_x: 0.3
                            text: 'Carrier ID'

                        Label:
                            size_hint_x: 0.3
                            text: 'Part Name'

                        Label:
                            size_hint_x: 0.3
                            text: 'Location'

                        Label:
                            size_hint_x: 0.3
                            text: 'Timer'

                    ScrollView:
                        size_hint_y: 1
                        do_scroll_x: False
                        do_scroll_y: True

                        GridLayout:
                            id: scroll_box
                            cols: 1
                            size_hint_y: None
                            height: self.minimum_height

            # Second row with a full-width label
            TextInput:
                id: scanner_input
                on_text_validate: root.on_enter(self)
                on_double_tap: root.open_key_board()
                multiline: False
                hint_text: 'Scan barcode here'
                size_hint_y: None
                height: '35dp'  # Fixed height
                width: root.width
                pos_hint: {'y': 0}
                valign: 'middle'
