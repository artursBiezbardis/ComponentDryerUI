<MainLayout>:
    cols:1
    GridLayout:
        cols: 1
        size: root.size
        GridLayout:
            rows: 2
            size_hint_y: 0.9 # 80% of the parent's height is assigned here

            # First row with two columns
            GridLayout:
                cols: 2
                size_hint_y: 0.9  # 90% of the parent grid row's height
                size_hint_x: 0.9

                # First column in the first row
                GridLayout:
                    cols: 1
                    #size_hint_y: None
                    size_hint_x: None
                    height: self.minimum_height  # Dynamic height based on its children
                    row_force_default: True
                    row_default_height: 50
                    col_force_default: True
                    col_default_width: 100
                    Label:
                        text: 'Status'
                        color: 1, 0, 0, 1  # Red color
                    Button:
                        text: 'List'
                    Button:
                        text: 'Settings'

                # Second column in the first row with scrollable content
                BoxLayout:
                    cols: 1
                    orientation: 'vertical'
                    size_hint_x: 1.9
                    height: '10dp'
                    canvas.before:
                        Color:
                            rgba: 0.15, 0.15, 0.15, 1
                        Rectangle:
                            pos: self.pos
                            size: self.size

                    GridLayout:
                        size_hint_x: 1
                        size_hint_y: None
                        height: 50
                        cols: 5

                        Label:
                            size_hint_x: 0.3
                            text: 'Carrier ID'

                        Label:
                            size_hint_x: 0.3
                            text: 'Part Name'

                        Label:
                            size_hint_x: 0.3
                            text: 'Location'

                        Label:
                            size_hint_x: 0.3
                            text: 'Timer'

                        Label:
                            size_hint_x: 0.2
                            text: ''

                    ScrollView:
                        size_hint_y: 1  # Take the full height available from BoxLayout
                        do_scroll_x: False
                        do_scroll_y: True

                        GridLayout:
                            id: scroll_box
                            cols: 1
                            size_hint_y: None
                            height: self.minimum_height  # Adjust based on content dynamically

            # Second row with a full-width label
            TextInput:
                id: scanner_input
                on_text_validate: root.on_enter(self)
                on_double_tap: root.open_key_board()
                multiline: False
                hint_text: 'Scan barcode here'
                size_hint_y: None
                height: '35dp'  # Fixed height
                width: root.width
                pos_hint: {'y': 0}
