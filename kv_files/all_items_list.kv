<AllItemsList>:
    cols:1
    title: 'List'
    size: root.size
    BoxLayout:
        cols: 1
        size: root.size
        orientation: 'vertical'
        size_hint_x: None
        canvas.before:
            Color:
                rgba: 0.15, 0.15, 0.15, 1
            Rectangle:
                pos: root.pos
                size: root.size
        GridLayout:
            size_hint_x: 0.3
            size_hint_y: None
            height: 30
            cols: 8
            Label:
                text: 'sort by:'
                width:100
            Button:
                id: revers_sort
                size_hint_x: 0.5
                text: '\u25B2'
                font_name: 'DejaVuSans.ttf'
                on_press:
                    root.sort_revers();
                    root.part_carrier_list();
            Spinner:
                id: sort_by
                text: 'task_id'
                values: [ 'task_id', 'start_time', 'end_time', 'part_name', 'carrier_barcode', 'status']
                width: 100
                height: 30
                #on_press:
                on_text:
                    root.sort_by = self.text
                    root.part_carrier_list()
            Label:
                text: 'find:'
                width: 100
            TextInput:
                id: find
                multiline: False
                hint_text: 'double tap for key board'
                on_double_tap: root.open_key_board()

        GridLayout:
            size_hint_x: 1
            size_hint_y: None
            height: 30
            cols: 4

            Label:
                size_hint_x: 0.3
                text: 'Carrier ID'

            Label:
                size_hint_x: 0.3
                text: 'Part Name'

            Label:
                size_hint_x: 0.3
                text: 'Location'

            Label:
                size_hint_x: 0.3
                text: ''

        ScrollView:
            size_hint_y: 1
            do_scroll_x: False
            do_scroll_y: True

            GridLayout:
                id: scroll_box
                cols: 1
                size_hint_y: None
                height: self.minimum_height
        BoxLayout:
            cols: 1
            orientation: 'vertical'
            size_hint_y: 0.1
            size_hint_x: 0.2
            padding: [0, 10, 0, 0]
            Button:
                text: 'Dismiss'
                on_press:
                    root.dismiss()