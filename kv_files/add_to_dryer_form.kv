<AddToDryerForm>
    cols:1
    title: 'Select MSL data for carrier'
    size: root.size
    GridLayout:
        cols: 1
        BoxLayout:
            orientation: 'horizontal'
            size_hint_x: 1
            size_hint_y: None
            height: 50
            cols: 8

            Label:
                canvas.before:
                    Color:
                        rgba: 0.01, 0.01, 0.13, 1
                    Rectangle:
                        pos: self.right - 0.5, self.y  # Adjust '5' to change the border width
                        size: 0.5, self.height
                text: 'Carrier id'
            Label:
                canvas.before:
                    Color:
                        rgba: 0.01, 0.01, 0.13, 1
                    Rectangle:
                        pos: self.right - 0.5, self.y  # Adjust '5' to change the border width
                        size: 0.5, self.height
                text: 'Part name'
            Label:
                canvas.before:
                    Color:
                        rgba: 0.01, 0.01, 0.13, 1
                    Rectangle:
                        pos: self.right - 0.5, self.y  # Adjust '5' to change the border width
                        size: 0.5, self.height
                text: 'Location'
            Label:
                canvas.before:
                    Color:
                        rgba: 0.01, 0.01, 0.13, 1
                    Rectangle:
                        pos: self.right - 0.5, self.y  # Adjust '5' to change the border width
                        size: 0.5, self.height
                text: 'Thickness'
            Label:
                canvas.before:
                    Color:
                        rgba: 0.01, 0.01, 0.13, 1
                    Rectangle:
                        pos: self.right - 0.5, self.y  # Adjust '5' to change the border width
                        size: 0.5, self.height
                text: 'MSL'
            Label:
                canvas.before:
                    Color:
                        rgba: 0.01, 0.01, 0.13, 1
                    Rectangle:
                        pos: self.right - 0.5, self.y  # Adjust '5' to change the border width
                        size: 0.5, self.height
                text: 'Condition'
            Label:
                canvas.before:
                    Color:
                        rgba: 0.01, 0.01, 0.13, 1
                    Rectangle:
                        pos: self.right - 0.5, self.y  # Adjust '5' to change the border width
                        size: 0.5, self.height
                text: 'Timer(h)'
            Label:
                text: ' '
        BoxLayout:
            orientation: 'horizontal'
            size_hint_x: 1
            size_hint_y: None
            height: 100
            cols: 8
            Label:
                canvas.before:
                    Color:
                        rgba: 0.01, 0.01, 0.13, 1
                    Rectangle:
                        pos: self.right - 0.5, self.y  # Adjust '5' to change the border width
                        size: 0.5, self.height
                text: root.item_data_template.get('carrier_barcode', 'N/A')
            Label:
                canvas.before:
                    Color:
                        rgba: 0.01, 0.01, 0.13, 1
                    Rectangle:
                        pos: self.right - 0.5, self.y  # Adjust '5' to change the border width
                        size: 0.5, self.height
                text: root.item_data_template.get('part_name', 'N/A')
            Label:
                canvas.before:
                    Color:
                        rgba: 0.01, 0.01, 0.13, 1
                    Rectangle:
                        pos: self.right - 0.5, self.y  # Adjust '5' to change the border width
                        size: 0.5, self.height
                text: root.item_data_template.get('carrier_position', 'N/A')
            Spinner:
                id: thickness_level
                text: 'Select'
                values: [ '< 0.5mm', '0.8 => 0.5mm', '1.4 => 0.8mm', '2 => 1.4mm', '4.5 => 2mm', 'custom']
                on_text:
                    root.update_msl_selection_values(root.ids.thickness_level.text);
                    root.ids.moisture_level.disabled = False

            Spinner:
                id: moisture_level
                text: 'Select'
                #values: [ 'msl 2', 'msl 2a', 'msl 3', 'msl 4', 'msl 5', 'msl 5a', 'custom']
                disabled: True
                on_text: root.ids.hours_greater_or_less_than_72.disabled = False

            Spinner:
                id: hours_greater_or_less_than_72
                text: 'Select'
                values: [ 'hours greater than 72', 'hours less than 72']
                disabled: True
                on_text:
                    root.set_time_to_dry();
                    root.ids.submit_interval.disabled = False;
                    root.ids.thickness_level.disabled = True;
                    root.ids.moisture_level.disabled = True;


            TextInput:
                id: drying_interval
                multiline: False
                value: ''
                disabled: True
                on_double_tap: root.ids.drying_interval.text = 'test'

            Button:
                id: submit_interval
                text: 'Submit'
                disabled: True
                on_press:
                    root.start_drying();
                    root.dismiss();
                    root.refresh_main_layout();

        BoxLayout:
            cols: 1
            orientation: 'horizontal'
            size_hint_x: 0.5
            size_hint_y: None
            height: 100

            Button:
                id: cancel
                text: 'Cancel'
                disabled: False
                on_press:
                    root.dismiss();
                    root.refresh_main_layout();