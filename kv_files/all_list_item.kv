<AllListItem>:
    col: 1
    size_hint_y: None
    height: 50
    orientation: 'horizontal'
    canvas.before:
        Color:
            rgba: root.set_list_item_color()
        Rectangle:
            pos: self.pos
            size: self.size
    canvas.after:
        Color:
            rgba: 0.12, 0.12, 0.13, 1
        Line:
            points: [self.x, self.y, self.right, self.y]  # Horizontal line at the bottom
            width: 1

    Label:
        id: carrier_id
        text: root.item['carrier_barcode']
        size_hint_x: 0.3
        canvas.before:
            Color:
                rgba: 0.12, 0.12, 0.13, 1
            Rectangle:
                pos: self.right - 0.5, self.y  # Adjust '5' to change the border width
                size: 0.5, self.height

    Label:
        id: part_name
        text: root.item['part_name']
        size_hint_x: 0.3
        canvas.before:
            Color:
                rgba: 0.12, 0.12, 0.13, 1
            Rectangle:
                pos: self.right - 0.5, self.y  # Adjust '5' to change the border width
                size: 0.5, self.height
    Label:
        id: data_spinner
        text: root.set_data_spinner()
        size_hint_x: 0.3
        canvas.before:
            Color:
                rgba: 0.12, 0.12, 0.13, 1
            Rectangle:
                pos: self.right - 0.5, self.y  # Adjust '5' to change the border width
                size: 0.5, self.height

    Button:
        text: 'VIEW DATA'
        size_hint_x: 0.3
        on_press:
            root.open_view()
