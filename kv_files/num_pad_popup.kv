<NumPadPopup>
    cols:1
    title: 'Num keyboard'
    size: root.size
    GridLayout:
        cols: 1
        BoxLayout:
            orientation: 'horizontal'
            size_hint_x: 1
            size_hint_y: None
            height: 35
            cols: 1
            TextInput:
                id: input_text
                multiline: False
                value: ''
        BoxLayout:
            orientation: 'horizontal'
            size_hint_x: 1
            size_hint_y: None
            height: self.parent.height / 5 -7
            width: 100
            cols: 3
            Button:
                id: 1
                text: '1'
                on_press: root.type_letter(self.text)
            Button:
                id: 2
                text: '2'
                on_press: root.type_letter(self.text)
            Button:
                id: 3
                text: '3'
                on_press: root.type_letter(self.text)

        BoxLayout:
            orientation: 'horizontal'
            size_hint_x: 1
            size_hint_y: None
            height: self.parent.height / 5 -7
            width: 100
            cols: 3
            Button:
                id: 4
                text: '4'
                on_press: root.type_letter(self.text)
            Button:
                id: 5
                text: '5'
                on_press: root.type_letter(self.text)
            Button:
                id: 6
                text: '6'
                on_press: root.type_letter(self.text)

        BoxLayout:
            orientation: 'horizontal'
            size_hint_x: 1
            size_hint_y: None
            height: self.parent.height / 5 - 7
            width: 100
            cols: 3
            Button:
                id: 7
                text: '7'
                on_press: root.type_letter(self.text)
            Button:
                id: 8
                text: '8'
                on_press: root.type_letter(self.text)
            Button:
                id: 9
                text: '9'
                on_press: root.type_letter(self.text)
        BoxLayout:
            orientation: 'horizontal'
            size_hint_x: 1
            size_hint_y: None
            height: self.parent.height / 5 - 7
            width: 100
            cols: 1
            Button:
                id: 0
                text: '0'
                on_press: root.type_letter(self.text)
        BoxLayout:
            orientation: 'horizontal'
            size_hint_x: 1
            size_hint_y: None
            height: self.parent.height / 5 - 7
            width: 100
            cols: 3
            Button:
                id: OK
                text: 'OK'
                on_press: root.enter_text()
            Button:
                id: DEL
                text: 'DEL'
                on_press: root.delete_one_letter()
            Button:
                id: CANCEL
                text: 'CANCEL'
                on_press: root.dismiss()

